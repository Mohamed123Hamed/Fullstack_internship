@page "/"
@using TaskApplication.Shared.Models;



<PageTitle>Tasks</PageTitle>
<div>
    <div class="d-flex align-center justify-space-between mt-0">
        <MudPaper Style="background-color:purple" Elevation="2"  Height="20" Width="100%" Class="mt-5">
           <MudText Align="Align.Center" Typo="Typo.h5" Style="color:white">To Do List Tasks</MudText>

        </MudPaper>
      
    </div>


    <div id="TableToPrint" >


        <MudTable 
            Class="mt-2"
            Items="@taskModels"
                  T="TaskModel"
                  Dense="true"
                  Hover="true"
                  Bordered="true"
                  Striped="true"
                  Breakpoint="Breakpoint.MdAndDown"
                  FixedHeader
                  Height="70vh"
                  Style="margin-bottom:20px"
                  >


            <HeaderContent>
                <MudTh>Task Name</MudTh>
                <MudTh>Description</MudTh>
                <MudTh>Date</MudTh>
                <MudTh>Is Completed</MudTh>

            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.taskName</MudTd>
                <MudTd>@context.description</MudTd>
                <MudTd>@context.DueDate.ToLongDateString()</MudTd>
                <MudTd>
                    <MudCheckBox ReadOnly="context.isCompleted" @onclick="()=>UpdateTask(context,context.taskId)" @bind-Checked="@context.isCompleted" Dense="true" Color="Color.Success"></MudCheckBox>
                    </MudTd>
                

               
            </RowTemplate>
         
        </MudTable>
    </div>
</div>


